{
  "name": "elitepro",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node index.js",
    "start:dev": "nodemon index.js",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "db:init": "psql -U $DB_USER -d $DB_NAME -f database/init.sql",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:init",
    "redis:start": "redis-server",
    "stream": "node server/stream-server.js",
    "api": "node server/notifier.js"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "keywords": [
    "event-streaming",
    "postgresql",
    "redis",
    "websockets"
  ],
  "author": "Your Name",
  "license": "ISC",
  "description": "Real-time event streaming system with PostgreSQL and Redis",
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  }
}
